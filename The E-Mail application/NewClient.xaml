<Window x:Class="The_E_Mail_application.NewClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewClient" Height="200" Width="300" Icon="Lynspitti.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="22"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Question1" Grid.Column="1" Grid.Row="2"/>
        <TextBox Name="Answer1" Grid.Column="3" Grid.Row="2"/>
        <TextBlock Name="Question2" Grid.Column="1" Grid.Row="3" Visibility="Collapsed"/>
        <PasswordBox Name="Answer2" Grid.Column="3" Grid.Row="3" Visibility="Collapsed"/>
        <Button Name="Done" Content="Done" Grid.Column="3" Grid.Row="5" Width="60" Click="Done_Click"/>
    </Grid>
</Window>